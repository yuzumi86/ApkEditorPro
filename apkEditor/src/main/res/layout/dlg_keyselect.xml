<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/private_key_label" />

        <EditText
            android:id="@+id/et_pk8path"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"></EditText>

        <ImageButton
            android:id="@+id/btn_select_pk8"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:scaleType="fitCenter"
            android:src="@drawable/folderutil_folder" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/public_key_label" />

        <EditText
            android:id="@+id/et_x509path"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"></EditText>

        <ImageButton
            android:id="@+id/btn_select_x509"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:scaleType="fitCenter"
            android:src="@drawable/folderutil_folder" />
    </LinearLayout>

</LinearLayout>