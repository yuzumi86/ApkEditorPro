<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dip"
    android:background="#ff111111"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/switch_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/selector_iv_button"
        android:src="@drawable/array_switch" />

    <View
        android:id="@+id/separate_view"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#ff808080" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:id="@+id/special_char_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/special_char_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/menu_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/saveBtn"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/selector_iv_button"
                android:contentDescription="@string/save"
                android:scaleType="center"
                android:src="@drawable/edit_save" />

            <ImageView
                android:id="@+id/copyBtn"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/selector_iv_button"
                android:contentDescription="@android:string/copy"
                android:scaleType="center"
                android:src="@drawable/edit_copy" />

            <ImageView
                android:id="@+id/pasteBtn"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/selector_iv_button"
                android:contentDescription="@android:string/paste"
                android:scaleType="center"
                android:src="@drawable/ic_clipboard_white" />

            <ImageView
                android:id="@+id/openFindBtn"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/selector_iv_button"
                android:contentDescription="@string/find_replace"
                android:scaleType="centerInside"
                android:src="@drawable/edit_find" />

            <ImageView
                android:id="@+id/moreBtn"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/selector_iv_button"
                android:contentDescription="@string/more"
                android:scaleType="center"
                android:src="@drawable/ic_toolbar_more" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>