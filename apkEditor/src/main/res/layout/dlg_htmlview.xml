<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/littleblue"
        android:orientation="horizontal">

        <View
            android:layout_width="48dip"
            android:layout_height="40dip" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/filename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightblue" />

            <RelativeLayout
                android:id="@+id/menu_methods"
                android:layout_width="48dip"
                android:layout_height="40dip"
                android:background="@drawable/selector_menu_light2">

                <ImageView
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:layout_centerInParent="true"
                    android:src="@drawable/listfile_blue" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="48dip"
            android:layout_height="40dip" />
    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="#ff111111"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/editorBtn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/selector_iv_button"
            android:scaleType="center"
            android:src="@drawable/edit_editor" />
    </LinearLayout>

</LinearLayout>